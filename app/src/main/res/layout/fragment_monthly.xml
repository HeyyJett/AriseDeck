<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallengeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#6293C6">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Challenges"
            android:textSize="32dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:padding="5dp"/>

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/Daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:layout_margin="5dp"
                android:backgroundTint="#303030"
                android:layout_weight="1"
                android:onClick="daily"/>

            <Button
                android:id="@+id/Weekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly"
                android:layout_margin="5dp"
                android:backgroundTint="#303030"
                android:layout_weight="1"
                android:onClick="weekly"/>

            <Button
                android:id="@+id/Monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly"
                android:layout_margin="5dp"
                android:backgroundTint="#303030"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#303030">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/Challenge1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Challenge 1"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/Complete1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete"
                    android:textSize="12dp"
                    android:padding="10dp"
                    android:backgroundTint="#ffff"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"
                    android:layout_weight="3"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/challenge1PB"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/Challenge2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Challenge 2"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/Complete2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete"
                    android:textSize="12dp"
                    android:padding="10dp"
                    android:backgroundTint="#ffff"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"
                    android:layout_weight="3"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/challenge2PB"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/Challenge3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Challenge 3"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/Complete3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete"
                    android:textSize="12dp"
                    android:padding="10dp"
                    android:backgroundTint="#ffff"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"
                    android:layout_weight="3"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/challenge3PB"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/Challenge4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Challenge 4"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/Complete4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete"
                    android:textSize="12dp"
                    android:padding="10dp"
                    android:backgroundTint="#ffff"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"
                    android:layout_weight="3"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/challenge4PB"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/Challenge5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Challenge 5"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/Complete5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete"
                    android:textSize="12dp"
                    android:padding="10dp"
                    android:backgroundTint="#ffff"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"
                    android:layout_weight="3"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/challenge5PB"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>